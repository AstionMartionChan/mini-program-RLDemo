.edit-card-title{
    background: #f5f5f5;
    padding: 0 50rpx;
    line-height: 3.5em;
}
.basic-info{
    display: flex;
    align-items: center;
    padding-left: 50rpx;
    padding-right: 50rpx;
}
.h90{
    height: 90rpx;
    border-bottom: 2rpx solid #f5f5f5;
}
.basic-info-label{
    width: 100rpx;
    color: #333;
}
.basic-info-input{
    flex: 1;
}
.placeholder-color{
    color: #ccc;
}
.image-list{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.wh{
    width: 100%;
    height: 200rpx;
}
.save{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    background: linear-gradient(to right, #ddbf93, #b08351);
}
.container-mine {
    background: #f5f5f5;
}

.mine-info {
    position: relative;
    width: 100%;
    height: 360rpx;
}

.mine-bg {
    width: 100%;
    height: 360rpx;
    opacity: .4;
}

.mine-info-head {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 360rpx;
    background: rgba(0, 0, 0, .3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.mine-info-head-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 500rpx;
    border: 4rpx solid #fff;
}

.qr-code {
    position: absolute;
    top: 30rpx;
    right: 0;
    width: 140rpx;
    height: 60rpx;
}
.entrance-list-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-bottom: 2rpx solid #f5f5f5;
}
.entrance-list-item-title{
    display: flex;
    align-items: center;
}
.entrance-list-item-image{
    width: 60rpx;
    height: 60rpx;
}
.log-out-button{
    width: 70%;
    background: linear-gradient(to right, #ddbf93, #b08351);
    color: #fff;
}
.log-out-button::after{
    border: none;
}
.message .message-item {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.message .message-item .message-head {
  position: relative;
}
.message .message-item .message-head image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 500rpx;
  box-shadow: 2rpx 6rpx 10rpx #ccc;
}
.message .message-item .message-head .unread {
  position: absolute;
  top: 5rpx;
  right: 20rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 500rpx;
  background: #E70012;
}
.message .message-item .message-referral {
  flex: 1;
  width: 250rpx;
}
.message .message-item .message-referral .message-referral-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message .message-item .message-referral .message-referral-1 .message-referral-name {
  width: 310rpx;
}
.message .message-item .message-icon-right {
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.message-tip {
  position: fixed;
  right: 50rpx;
  bottom: 10%;
  width: 190rpx;
  height: 190rpx;
}
.message-tip image {
  width: 100%;
  height: auto;
}
.message-tip .message-tip-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.message-tip .message-tip-text view {
  display: flex;
  line-height: 40rpx;
}
.message-tip .message-tip-text view view {
  font-size: 28rpx;
  position: relative;
  top: -0.2em;
  font-weight: 700;
  background: linear-gradient(to bottom, orange, #00a700);
  -webkit-background-clip: text;
  color: transparent;
  -webkit-text-fill-color: transparent;
  text-fill-color: transparent;
}
